# Copy this file to ".env" and fill in values.
# Never commit your real ".env" with secrets.

# App
APP_NAME="Multi Agents Marketing and Growth System"

# OpenAI
OPENAI_API_KEY=""
OPENAI_MODEL_DEFAULT="gpt-4o-mini"

# Anthropic (for agents mapped to anthropic in app/config.AGENT_MODEL_MAP)
ANTHROPIC_API_KEY=""
ANTHROPIC_MODEL_DEFAULT="claude-3-sonnet"

# Fallback when agent not in AGENT_MODEL_MAP
LLM_PROVIDER="ollama"
OLLAMA_BASE_URL="http://localhost:11434/v1"
OLLAMA_API_KEY="ollama"
OLLAMA_MODEL_DEFAULT="llama3"

# Storage / infra
DATABASE_URL="sqlite:///./app.db"
REDIS_URL="redis://localhost:6379/0"

# MongoDB (brand data)
MONGODB_URI="mongodb://localhost:27017"
MONGODB_DB_NAME="marketing_growth"

# LangSmith tracing (LangChain/LangGraph)
LANGSMITH_TRACING=true
LANGSMITH_ENDPOINT="https://api.smith.langchain.com"
LANGSMITH_API_KEY=""
LANGSMITH_PROJECT="Market and Growth"

